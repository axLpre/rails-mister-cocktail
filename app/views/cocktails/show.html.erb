<div class="container">
  <h1>Cocktail: <%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p>Dose: <%= dose.description %>, Ingredient: <%= dose.ingredient.name %></p>

    <%= link_to 'delete a dose', dose_path(dose), method: :delete  %>
    <br>
  <% end %>
  <%= link_to 'add a dose', new_cocktail_dose_path(@cocktail) %>
    <br>
  <%= link_to 'Back to cocktail', cocktails_path(@cocktail) %>
</div>